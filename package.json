{
  "name": "radka",
  "version": "0.0.4",
  "license": "MIT",
  "bin": "dist/index.js",
  "main": "dist/lib.js",
  "author": "Alexandre Piel <alexandre.piel@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/apiel/radka"
  },
  "engines": {
    "node": ">=11"
  },
  "scripts": {
    "fix-jsx-pragmatic": "cp jsx-pragmatic.js node_modules/jsx-pragmatic/dist/jsx-pragmatic.js",
    "serv": "ISOMOR_STATIC_FOLDER=./site/static ISOMOR_DIST_SERVER_FOLDER=./site/server ISOMOR_SERVER_FOLDER=/api isomor-server",
    "serv:dev": "nodemon --watch 'api/**/*' -e ts,js --exec 'yarn serv'",
    "dev": "yarn fix-jsx-pragmatic && ts-node src/index.ts",
    "httpd": "http-server ./site/static",
    "build": "rm -rf dist/ && tsc -p tsconfig.json && chmod +x dist/index.js",
    "build-babel": "babel src-demo --out-dir tmp",
    "build-babel-server": "babel src-demo/api --out-dir site/server/api --config-file ./.babelrc.server.json",
    "build-isomor": "ISOMOR_DIST_APP_FOLDER=tmp isomor-transpiler"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/generator": "^7.9.5",
    "@babel/parser": "^7.9.4",
    "@babel/plugin-syntax-jsx": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "babel-preset-minify": "^0.5.1",
    "chalk": "^4.0.0",
    "cosmiconfig": "^6.0.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "isomor-server": "^2.6.2",
    "isomor-transpiler": "^2.5.5",
    "jsx-pragmatic": "^2.0.8",
    "logol": "^0.0.3",
    "minimist": "^1.2.5",
    "nodemon": "^2.0.3",
    "parcel": "^1.12.4",
    "tmp": "^0.1.0",
    "ts-loader": "^6.2.2"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.7",
    "@types/chalk": "^2.2.0",
    "@types/fs-extra": "^8.1.0",
    "@types/glob": "^7.1.1",
    "@types/node": "^13.11.1",
    "@types/tmp": "^0.1.0",
    "dist": "^0.1.2",
    "http-server": "^0.12.1",
    "ts-node": "^8.8.2"
  }
}
